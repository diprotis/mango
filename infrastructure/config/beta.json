{
  "environment": "beta",
  "account": "",
  "region": "us-east-1",
  "projectName": "reading-journey",
  "tags": {
    "Environment": "Beta",
    "Project": "ReadingJourney",
    "ManagedBy": "CDK",
    "CostCenter": "Engineering"
  },
  "vpc": {
    "maxAzs": 2,
    "natGateways": 1,
    "enableFlowLogs": true
  },
  "lambda": {
    "memorySize": 512,
    "timeout": 30,
    "logRetentionDays": 7,
    "tracingEnabled": true
  },
  "s3": {
    "versioning": true,
    "encryption": "S3_MANAGED",
    "lifecycleRules": {
      "transitionToIA": 30,
      "transitionToGlacier": 90
    }
  },
  "dynamodb": {
    "billingMode": "PAY_PER_REQUEST",
    "pointInTimeRecovery": false,
    "deletionProtection": false
  },
  "monitoring": {
    "detailedMetrics": true,
    "alarmEmail": "team+beta@example.com"
  }
}
