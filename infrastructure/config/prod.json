{
  "environment": "prod",
  "account": "",
  "region": "us-east-1",
  "projectName": "reading-journey",
  "tags": {
    "Environment": "Production",
    "Project": "ReadingJourney",
    "ManagedBy": "CDK",
    "CostCenter": "Engineering"
  },
  "vpc": {
    "maxAzs": 3,
    "natGateways": 3,
    "enableFlowLogs": true
  },
  "lambda": {
    "memorySize": 1024,
    "timeout": 60,
    "logRetentionDays": 30,
    "tracingEnabled": true,
    "reservedConcurrentExecutions": 10
  },
  "s3": {
    "versioning": true,
    "encryption": "KMS_MANAGED",
    "lifecycleRules": {
      "transitionToIA": 60,
      "transitionToGlacier": 180,
      "expiration": 2555
    }
  },
  "dynamodb": {
    "billingMode": "PAY_PER_REQUEST",
    "pointInTimeRecovery": true,
    "deletionProtection": true
  },
  "monitoring": {
    "detailedMetrics": true,
    "alarmEmail": "team+prod@example.com",
    "snsTopicName": "reading-journey-prod-alerts"
  }
}
